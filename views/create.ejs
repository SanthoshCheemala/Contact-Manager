            <input type="text" class="email" name="Address" placeholder="MYDUKUR"><br>
            <label for="email">Email Of Person:</label><br>
            <input type="email" class="email" name="email" placeholder="example@gmail.com"><br>
            <label for="confirm-password">Phone Number Of Person:</label><br>
            <input type="number" class="c-password" name="number" placeholder="+919786588757"><br>
            <button id="add" name="register">ADD CONTACT</button>
        </form>
